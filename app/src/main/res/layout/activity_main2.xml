<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cybereye_community.blog.Main2Activity">
    <TextView
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_margin="5dp"
        android:id="@+id/judul"
        android:text="Judul Buku"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_margin="5dp"
        android:id="@+id/pengarang"
        android:text="Pengarang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="16sp"
        android:layout_margin="5dp"
        android:id="@+id/harga"
        android:text="Harga"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_margin="5dp"
        android:text="Pengiriman :"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
   <RadioGroup
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <RadioButton
           android:text="JNE"
           android:id="@+id/jne"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />
       <RadioButton
           android:text="TIKI"
           android:id="@+id/tiki"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />
       <RadioButton
           android:text="Ninja Express"
           android:id="@+id/ninja"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />
   </RadioGroup>
    <TextView
        android:layout_margin="5dp"
        android:text="Quantity :"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/tambah"
            android:text="+"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <TextView
            android:id="@+id/qty"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/kurang"
            android:text="-"
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </LinearLayout>
    <TextView
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_margin="5dp"
        android:id="@+id/totalPengiriman"
        android:text="Harga Pengiriman : Rp. 0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_margin="5dp"
        android:id="@+id/total"
        android:text="Harga Barang : Rp. 0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/order"
        android:layout_margin="5dp"
        android:text="Order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_margin="5dp"
        android:id="@+id/totalSemua"
        android:text="Total Harga: Rp. 0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
